   <children>
      <ImageView fitHeight="400.0" fitWidth="600.0" pickOnBounds="true">
         <image>
            <Image url="@../img/misc/sfondo parquet.jpg" />
         </image>
      </ImageView>
      <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="430.0" layoutY="49.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../img/boards/bookshelf.png" />
         </image>
      </ImageView>
      <ImageView fitHeight="400.0" fitWidth="400.0" pickOnBounds="true">
         <image>
            <Image url="@../img/boards/livingroom.png" />
